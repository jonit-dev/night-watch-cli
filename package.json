{
  "name": "@jonit-dev/night-watch-cli",
  "version": "1.4.6",
  "description": "Autonomous PRD execution using AI Provider CLIs + cron",
  "type": "module",
  "bin": {
    "night-watch": "./bin/night-watch.mjs"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "scripts": {
    "build": "yarn build:cli && yarn build:web",
    "build:web": "cd web && yarn install && yarn build",
    "build:cli": "tsc",
    "test": "vitest run",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run build && npm test",
    "publish:npm": "npm publish --access public",
    "lint": "eslint src/",
    "verify": "tsc --noEmit && eslint src/",
    "local": "tsc && yarn link"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/",
    "templates/",
    "web/dist/"
  ],
  "keywords": [
    "claude",
    "codex",
    "ai",
    "prd",
    "automation",
    "cron",
    "cli",
    "night-watch"
  ],
  "author": "Joao Pio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonit-dev/night-watch-cli.git"
  },
  "homepage": "https://github.com/jonit-dev/night-watch-cli#readme",
  "bugs": {
    "url": "https://github.com/jonit-dev/night-watch-cli/issues"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "cors": "^2.8.6",
    "cronstrue": "^3.12.0",
    "express": "^5.2.1",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/blessed": "^0.1.27",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
