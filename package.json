{
  "name": "@jonit-dev/night-watch-cli",
  "version": "1.1.4",
  "description": "Autonomous PRD execution using AI Provider CLIs + cron",
  "type": "module",
  "bin": {
    "night-watch": "./bin/night-watch.mjs"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run build && npm test",
    "publish:npm": "npm publish --access public"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/",
    "templates/"
  ],
  "keywords": [
    "claude",
    "codex",
    "ai",
    "prd",
    "automation",
    "cron",
    "cli",
    "night-watch"
  ],
  "author": "Joao Pio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joaopio/night-watch-cli.git"
  },
  "homepage": "https://github.com/joaopio/night-watch-cli#readme",
  "bugs": {
    "url": "https://github.com/joaopio/night-watch-cli/issues"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
