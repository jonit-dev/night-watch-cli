{
  "name": "@night-watch/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "verify": "turbo run verify",
    "build:web": "cd web && yarn install && yarn build",
    "dev:web": "concurrently --names \"api,vite\" --prefix-colors \"cyan,magenta\" \"node packages/cli/bin/night-watch.mjs serve\" \"yarn --cwd web dev\"",
    "prepublishOnly": "yarn build && yarn test",
    "lint": "eslint packages/",
    "local": "yarn build && yarn link"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "turbo": "^2.8.10",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@1.22.22"
}
