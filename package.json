{
  "name": "@night-watch/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "verify": "turbo run verify",
    "build:web": "cd web && yarn install && yarn build",
    "dev:web": "concurrently --names \"api,vite\" --prefix-colors \"cyan,magenta\" \"node packages/cli/bin/night-watch.mjs serve\" \"yarn --cwd web dev\"",
    "prepublishOnly": "yarn build && yarn test",
    "lint": "eslint packages/",
    "format": "prettier --write 'packages/**/*.{ts,tsx,js,mjs,json}'",
    "format:check": "prettier --check 'packages/**/*.{ts,tsx,js,mjs,json}'",
    "local": "yarn build && yarn link",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "eslint-plugin-sonarjs": "^4.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "turbo": "^2.8.10",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22"
}
