{
  "name": "night-watch-cli",
  "version": "1.0.0",
  "description": "Autonomous PRD execution using Claude CLI + cron",
  "type": "module",
  "bin": {
    "night-watch": "./bin/night-watch.mjs"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "dev": "tsx src/cli.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/",
    "templates/"
  ],
  "keywords": [
    "claude",
    "ai",
    "prd",
    "automation",
    "cron",
    "cli",
    "night-watch"
  ],
  "author": "Joao Pio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joaopio/night-watch-cli.git"
  },
  "homepage": "https://github.com/joaopio/night-watch-cli#readme",
  "bugs": {
    "url": "https://github.com/joaopio/night-watch-cli/issues"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
