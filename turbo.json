{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build", "^build"],
      "outputs": []
    },
    "verify": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
