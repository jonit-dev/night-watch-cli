{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@night-watch/core": ["../core/src/index.ts"],
      "@night-watch/core/*": ["../core/src/*"],
      "@night-watch/server": ["../server/src/index.ts"],
      "@night-watch/server/*": ["../server/src/*"],
      "@/*": ["../core/src/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../server"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/__tests__/**"]
}
