{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@night-watch/core": [
        "../core/src/index.ts"
      ],
      "@night-watch/core/*": [
        "../core/src/*"
      ],
      "@night-watch/server": [
        "../server/src/index.ts"
      ],
      "@night-watch/server/*": [
        "../server/src/*"
      ],
      "@night-watch/slack": [
        "../slack/src/index.ts"
      ],
      "@night-watch/slack/*": [
        "../slack/src/*"
      ],
      "@/*": [
        "../core/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../server"
    },
    {
      "path": "../slack"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/__tests__/**"
  ]
}
